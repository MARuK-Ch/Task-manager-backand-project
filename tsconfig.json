{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "rewriteRelativeImportExtensions": true,
  },
  "include": ["src"],
  "baseUrl": ".",
  "paths": {
    "@/*": ["src/*"]
  }
}